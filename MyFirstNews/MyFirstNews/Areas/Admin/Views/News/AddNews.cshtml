@model News;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutManage.cshtml";
}
@*<input type="hidden" asp-for="Id" />*@



<div class="form-group col-12" ng-init="files=[]">
    <label asp-for="Title"></label>
    <input type="text" class="form-control" placeholder="Title" asp-for="Title" />
</div>
<div class="form-group col-12">
    <label asp-for="Description"></label>
    <input type="text" class="form-control" asp-for="Description" />
</div>
<div class="img-uploader row" ng-click="uploadImage($event)">
    <div class="i-holder col-2" ng-repeat="x in files">
        <div class="remove-parent">
            ❌
        </div>
        <img src="{{x.src}}" />
    </div>
</div>

